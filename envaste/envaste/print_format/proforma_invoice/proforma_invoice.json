 "html": "<br>\r\n<br>\r\n<br>\r\n<div style=\"\">\r\n<div style=\"margin-left: -12px;margin-top: -42px;height: 90px;display: flex;\r\n    justify-content: space-between;\">\r\n    <img src=\"/assets/envaste/logo/images.png\">\r\n    <p><span style=\"float:right;\">Ex5 to SOP-3 Rev01 </span><br><span style=\"font-size:26px;font-weight: bold;\">Proforma Invoice </span></p>\r\n</div>\r\n</div>\r\n<!--<div style=\"margin-top: -2rem;margin-left:7rem;\">-->\r\n<!--<p style=\"margin-left: 6rem;margin-top: -1rem;font-weight:bold;\"><span>Ex5 to SOP-3 Rev01 </span><br><span style=\"font-size:26px;\">Proforma Invoice </span></p>-->\r\n<!--<p style=\"text-align:center;margin-top: 2rem;\"><b style=\"font-size: 22px;\">Proforma Invoice</b></p>-->\r\n<!--</div>-->\r\n<br>\r\n<div class=\"container-1\">\r\n    <div class=\"section-1\" >\r\n         <div class=\"text\">\r\n            <p style=\"margin-top:2rem;\">Level 4, Maeva Tower Building,<br>  Silicon Avenue- Ebene Business Park <br>R\u00e9duit -Postal Code 72201 <br> Republic of Mauritius\r\n</p>\r\n        </div>\r\n        <div class=\"part-1\">\r\n            <table style=\"width: 100%; border-collapse: collapse;\">\r\n            <tr>\r\n                <th style=\"border: 1px solid black;\" colspan=\"2\">Invoice To</th>\r\n            </tr>\r\n            <tr>\r\n                <th style=\"border: 1px solid black; height: auto;\" colspan=\"2\">{{doc.customer}} <br>{{doc.address_display or \"\"}}\r\n                \r\n                </th>\r\n            </tr>\r\n            <tr>\r\n                 {%set cus =frappe.get_doc(\"Customer\",doc.customer)%}\r\n                <td style=\"border: 1px solid black;\"><b>Cust VAT Reg. </b></td>\r\n                <td style=\"border: 1px solid black;\"><b>Customer B.R.N</b></td>\r\n            </tr>\r\n            <tr>\r\n                \r\n                <td style=\"border: 1px solid black;\">{{cus.custom_customer_vat_reg_number or \"\"}}</td>\r\n                <td style=\"border: 1px solid black;\">{{cus.custom_customer_brn_number or \"\"}}</td>\r\n            </tr>\r\n            <tr>\r\n                <th style=\"border: 1px solid black;\" colspan=\"2\"><b>Contact Name: {{doc.contact_person or \"\"}}</b></th>\r\n            </tr>\r\n            </table>\r\n        </div>\r\n        <br>\r\n      \r\n        \r\n        <div class=\"part-2\">\r\n            <table style=\"width: 100%; border-collapse: collapse;\">\r\n            <tr>\r\n                <th style=\"border: 1px solid black;\">Shipping Term</th>\r\n                <th style=\"border: 1px solid black;\">Payment Term</th>\r\n                <th style=\"border: 1px solid black;\">Order No.</th>\r\n            </tr>\r\n            <tr>\r\n                <td style=\"border: 1px solid black;\">{{doc.shipping_rule or \"\"}}</td>\r\n                <td style=\"border: 1px solid black;\">{{doc.payment_terms_template or \"\"}}</td>\r\n                <td style=\"border: 1px solid black;\">{{doc.name}}</td>\r\n            </tr>\r\n            </table>\r\n        </div>\r\n    </div>\r\n    \r\n    <div class=\"section-2\" >\r\n        <div class=\"part-3\">\r\n            <table style=\"width: 100%; border-collapse: collapse;\">\r\n            <tr>\r\n                <th style=\"border: 1px solid black;\">Date</th>\r\n                <th style=\"border: 1px solid black;\">Proforma Invoice</th>\r\n                <th style=\"border: 1px solid black;\">Company VAT Reg No</th>\r\n            </tr>\r\n            <tr>\r\n                <td style=\"border: 1px solid black;\">{{doc.transaction_date or \"\"}}</td>\r\n                <td style=\"border: 1px solid black;\">{{ doc.name or \"\" }}</td>\r\n                <td style=\"border: 1px solid black;\">VAT27140361</td>\r\n            </tr>\r\n            <tr>\r\n                <td style=\"border: 1px solid black;\" colspan=\"2\">Phone: +230 4663054\r\nFax: +230 4666770\r\nEmail: info@envaste.com</td>\r\n                <td style=\"border: 1px solid black;\">Business Registration No: C12108782</td>\r\n                \r\n            </tr>\r\n            </table>\r\n        </div>\r\n        <br>\r\n        \r\n        <div class=\"part-4\">\r\n        <table style=\"width: 100%; border-collapse: collapse;\">\r\n            <!--<p><b>Proforma Invoice</b></p>-->\r\n            <tr>\r\n                <td style=\"border: 1px solid black; height: 20px;\"><b>Ship To</b></td>\r\n            </tr>\r\n            <tr>\r\n                <td style=\"border: 1px solid black; height: auto;\">{{doc.shipping_address or \"\"}}</td>\r\n            </tr>\r\n        </table>\r\n\r\n        </div>\r\n    </div>\r\n</div>\r\n<br>\r\n\r\n\r\n<div class=\"container-2\">\r\n     <table width=100% border=\"1\" style=\"font-size: 15px; border-bottom: 1px solid black;    border-collapse: collapse;\">\r\n        <tr style=\"border: 1px solid black;font-size: 12px;height: 10px;\">\r\n            <th style=\"border: 1px solid black;width: 1%\";\">Line</th>\r\n            <th style=\"border: 1px solid black;width: 10%;\">Item</th>\r\n            <th style=\"border: 1px solid black;width: 2%;\">Description</th>\r\n            <th style=\"border: 1px solid black;width: 2%;\">Qty</th>\r\n            <th style=\"border: 1px solid black;width: 2%;\">U/M</th>\r\n            <th style=\"border: 1px solid black;width: 2%;\">Rate</th>\r\n            <th style=\"border: 1px solid black;width: 4%;\">Lot No.</th>\r\n            <th style=\"border: 1px solid black;width: 2%;border-bottom: 1px solid black !important;\">Total</th>\r\n            <th style=\"border: 1px solid black;width: 2%;\">VAT</th>\r\n        </tr>\r\n        \r\n        {% for item in doc.items %}\r\n        <tr style=\"border: 1px solid black;font-size: 12px;height: 10px\">\r\n            <td style=\"border: 1px solid black;\">{{ item.idx }}</td>\r\n            <td style=\"border: 1px solid black;\">{{ item.item_name }}</td>\r\n            <td style=\"border: 1px solid black;\">{{ item.description }}</td>\r\n            <td style=\"border: 1px solid black;\">{{ item.qty }}</td>\r\n            <td style=\"border: 1px solid black;\">{{ item.uom }}</td>\r\n            <td style=\"border: 1px solid black;\">{{ item.rate }}</td>\r\n            <td style=\"border: 1px solid black;\"></td>\r\n            <td style=\"border: 1px solid black;border-bottom: 1px solid black !important;\">{{ item.qty * item.rate }}</td>\r\n            <td style=\"border: 1px solid black;\">{{item.item_tax_template or \"\"}}</td>\r\n        </tr>\r\n        {% endfor %}\r\n        </table>\r\n</div>\r\n\r\n <div>\r\n     <br>\r\n     <p style=\"border-top:1px solid black;border-bottom:1px solid black;padding-left:15px;\"></p>\r\n</div>\r\n    \r\n    \r\n\r\n\r\n<div>\r\n    <p style=\"border: 1px solid black;\r\n    width: 46%;\r\n    font-size: 12px;\r\n    border-left: 0px;margin-top: 5px;\"><b>All Bank Charges are to be borne by the client</b></p>\r\n</div>\r\n        \r\n        \r\n\r\n<div class=\"container-1\">\r\n    <div class=\"part-5\" style=\"width:65%;\">\r\n<table style=\"width:40%;    border-collapse: collapse;    border-collapse: collapse;\">\r\n    {% if doc.currency==\"EUR\"%}\r\n    <tr>\r\n        <th style=\"border: 1px solid black;\">Bank Details</th>\r\n        <th style=\"border: 1px solid black;\">Currency</th>\r\n        <th rowspan=\"3\">Currency <br>EURO</th>\r\n    </tr>\r\n    <tr>\r\n        <td style=\"border: 1px solid black;\"><b>Bank A/C No:</b>000441428738</td>\r\n        \r\n    </tr>\r\n    <tr>\r\n        <td style=\"border: 1px solid black;\"><b>IBAN:</b>MU79MCBL0944000441428738000EUR</td>\r\n    </tr>\r\n    {%elif doc.currency == \"USD\"%}\r\n      <tr>\r\n        <th style=\"border: 1px solid black;\">Bank Details</th>\r\n        <th style=\"border: 1px solid black;\">Currency</th>\r\n        <th rowspan=\"3\">Currency <br>USD</th>\r\n    </tr>\r\n    <tr>\r\n        <td style=\"border: 1px solid black;\"><b