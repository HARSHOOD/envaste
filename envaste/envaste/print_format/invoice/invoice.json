 "html": "<!DOCTYPE html>\r\n<html lang=\"en\">\r\n<head>\r\n    <meta charset=\"UTF-8\">\r\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\r\n    <title>Document</title>\r\n</head>\r\n<style>\r\n    table {\r\n  font-family: arial, sans-serif;\r\n  border-collapse: collapse;\r\n  width: 100%;\r\n}\r\n.First_table.row {\r\n    margin-bottom: -2rem;\r\n        width: 100%;\r\n}\r\n\r\ntd, th {\r\n  border: 1px solid #000;\r\n  text-align: left;\r\n  padding: 8px;\r\n  color:#000 !important;\r\n}\r\n.container {\r\n    width: 100%;\r\n        margin-top: -2rem;\r\n\r\n}\r\n.First_table{\r\n    display: flex;\r\n}\r\n.second-table.row {\r\n    display: flex;\r\n        width: 100%;\r\n}\r\n.table3{\r\n    float: right;\r\n    position: relative;\r\n        top: -7rem;\r\n    left: -5rem;\r\n}\r\n.page-break {\r\n  page-break-after: always;\r\n}\r\n.div-one.row {\r\n    display: flex;\r\n}\r\n.col-md-4{\r\n    margin-right: 20px;\r\n}\r\n.print-format td, .print-format th {\r\n    padding: 5px !important;\r\n        font-size: 12px;\r\n\r\n}\r\n\r\n.div-two.row {\r\n    display: flex;\r\n}\r\n</style>\r\n<body>\r\n        <div class=\"container\">\r\n    {% macro header() %}\r\n            <div class=\"Navbar\" style=\"display: flex;align-items: center;\">\r\n                <img style=\"margin-left: -2rem;\" src=\"/assets/envaste/logo/images.png\">\r\n               <div style=\"margin-left: 4rem;\"><p style=\"margin-left: 7rem;\">Ex5 to SOP-3 Rev01 <br> </p><p style=\"font-size: 22px;\r\n    margin-top: 2rem;\r\n    font-weight: 600;\">INVOICE</p></div>\r\n            </div>\r\n           {% endmacro %}\r\n           \r\n           {{header()}}\r\n            <div class=\"First_table row\">\r\n                <table class=\"col-md-6\" style=\"height: auto;\">\r\n                    <tr>\r\n                        <th style=\"height:0px;\">\r\n                            <b>Invoice To</b>\r\n                        </th>\r\n                    </tr>\r\n                    <tr>\r\n                       \r\n                            <br>\r\n                            {% if doc.customer_address %}\r\n                    {% set ad = frappe.get_doc(\"Address\", doc.customer_address) %}\r\n                    <td style=\"text-wrap: wrap; line-break: anywhere; width: 200px;\">\r\n                       <b> {{ad.address_title or \"\"}}</b><br>\r\n                        {{ ad.address_line1 or \"\" }}\r\n                        {{ ad.address_line2 or \"\" }}<br>\r\n                        {{ ad.city or \"\" }}, {{ ad.county or \"\" }} {{ ad.state or \"\" }} {{ ad.country or \"\" }}<br>\r\n                        {{ ad.pincode or \"\" }}<br>\r\n                        {{ ad.email_id or \"\" }}<br>\r\n                        {{ ad.phone or \"\" }}\r\n                    </td>\r\n                    {% endif %}\r\n                            {% if doc.shipping_address %} {{doc.shipping_address or \"\"}} {% endif%}\r\n                            \r\n                        \r\n                    </tr>\r\n                </table>\r\n                <br><br>\r\n                <table class=\"col-md-6\" style=\"margin-left: 20px;\">\r\n                    <tr>\r\n                        <td><b>Company VAT Reg.</b><br>VAT27140361</td>\r\n                        <td><b>Invoice Date</b><br>{{doc.posting_date}}</td>\r\n                        \r\n                    </tr>\r\n                  \r\n                    <tr>\r\n                        <td><b>Business Registration\r\n                            No.\r\n                            </b>\r\n                          <br>C12108782\r\n                        </td>\r\n                       \r\n                        <td><b>Invoice No</b><br>\r\n                           {{doc.name}}</td>\r\n                        \r\n                    </tr>\r\n                    <tr>\r\n                        <td colspan=\"3\">\r\n                                                        <b>Envaste</b><br>\r\n                            {{doc.company_address_display or \"\"}}  \r\n                        </td>\r\n                    </tr>\r\n                </table>\r\n            </div>\r\n\r\n                <br><br>\r\n                <div class=\"second-table row\">\r\n                    <table  class=\"col-md-6\" style=\"width: 49%;\">\r\n                        <tr>\r\n                            <td>Contact Name:{{doc.contact_person or \"\"}}</td>\r\n                        </tr>\r\n                        <tr>\r\n                            <td>\r\n                            <br>\r\n                            <b>Ship To :</b> {{doc.shipping_address or \"\"}}</td>\r\n                        </tr>\r\n                     \r\n                    </table>\r\n                    <table  class=\"col-md-6\" style=\"    margin-left: 1rem;\r\n    width: 50%;\r\n    height: 0;\">\r\n                        <tr>\r\n                            <td style=\"text-align: center;\"><b>Payment Terms</b></td>\r\n                            <td style=\"text-align: center;\"><b>Advance Payment</b></td>\r\n                        </tr>\r\n                         {% for advance in doc.payment_schedule %}\r\n                        <tr>\r\n                            <td>{{advance.payment_term}}</td>\r\n                            <td>{{advance.payment_amount}}</td>\r\n                        </tr>\r\n                        {% endfor %}\r\n                         <tr>\r\n                            <td colspan=\"2\"><b>Customer Order No.</b></td>\r\n                        </tr>\r\n                        <tr>\r\n                            <td colspan=\"2\">{{doc.po_no}}</td>\r\n                        </tr>\r\n                        <br>\r\n                        <br>\r\n                    </table>\r\n            </div>\r\n                    <br>\r\n                 \r\n                    <table style=\"margin-left: -12px;    margin-top: -12px;\r\n\">\r\n                        <tr>\r\n                            <th style=\"width: 1%;\"><b>Line</b></th>\r\n                            <th style=\"width: 1%;\"><b>Qty</b></th>\r\n                            <th style=\"width: 4%;\"><b>Item</b></th>\r\n                            <th style=\"width: 12%;\"><b>Description</b></th>\r\n                            <th style=\"width: 1%;\"style=\"width: 1%;\"><b>U/M</b></th>\r\n                            <th style=\"width: 1%;\"><b>Lot No.</b></th>\r\n                            <th style=\"width: 1%;\"><b>Rate</b></th>\r\n                            <th style=\"width: 1%;\"><b>Amount</b></th>\r\n                        </tr>\r\n                          {% for item in doc.items %}\r\n                        <tr>\r\n                            <td>{{item.idx}}</td>\r\n                            <td>{{ item.qty|int }}</td>\r\n                            <td>{{item.item_code}}</td>\r\n                            {% set single_item =frappe.get_doc(\"Item\",item.item_code)%}\r\n                  <td>{{single_item.custom_description_1 or \"\"}} {{single_item.custom_description_2 or \"\"}} {{single_item.custom_description_3 or \"\"}}</td>\r\n                            <td>{{ item.uom }}</td>\r\n                            <td>{{item.batch_no}}</td>\r\n                            <td>{{ item.rate }}</td>\r\n                            <td>{{item.amount}}</td>\r\n                        </tr>\r\n                        {% endfor %}\r\n                    </table>\r\n                    <br>\r\n                    <div class=\"div-one row\"> \r\n                \r\n                        <div class=\"col-md-4\"style=\"margin-top: -1rem;\">\r\n                            <table>\r\n                                <tr>\r\n                                    <td style=\"border: none;\">All bank charges are to be borne by the Client</td>\r\n                                </tr>\r\n                            </table>\r\n                        </div>\r\n                        \r\n                    </div>\r\n                    <br>\r\n                    <div class=\"flex-1\" style=\"display:flex;margin-left: -10px;\">\r\n                    <table class=\"col-md-5\" style=\"width: 54%;\">\r\n           \r\n    {% if doc.currency==\"EUR\" %}\r\n        <tr>\r\n            <td>Bank Details:</td>\r\n\r\n            <td>Envaste Ltd</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Bank Name</td>\r\n            <td>The Mauritius Commercial Bank</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Bank Address</td>\r\n            <td>Sir William Newton Street Port -Louis</td>\r\n        </tr>\r\n        <tr>\r\n            <td>EURO Account No.:</td>\r\n            <td>000441428738</td>\r\n        </tr>\r\n        <tr>\r\n            <td>IBAN:</td>\r\n            <td>MU79MCBL0944000441428738000EUR</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Swift Code:</td>\r\n            <td>MCBLMUMU</td>\r\n        </tr>\r\n    {% elif doc.currency==\"USD\" %}\r\n      <tr>\r\n            <td>Bank Details:</td>\r\n            <td>Envaste Ltd</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Bank Name</td>\r\n            <td>The Mauritius Commercial Bank</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Bank Address</td>\r\n            <td>Sir William Newton Street Port -Louis</td>\r\n        </tr>\r\n        <tr>\r\n            <td>USD Account No.:</td>\r\n            <td>000441409296</td>\r\n        </tr>\r\n        <tr>\r\n            <td>IBAN:</td>\r\n            <td>MU76MCBL094400441409296000USD</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Swift Code:</td>\r\n            <td>MCBLMUMU</td>\r\n        </tr>\r\n    {% elif doc.currency==\"MUR\" %}\r\n      <tr>\r\n            <td>Bank Details:</td>\r\n            <td>Envaste Ltd</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Bank Name</td>\r\n            <td>The Mauritius Commercial Bank</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Bank Address</td>\r\n            <td>Sir William Newton Street Port -Louis</td>\r\n        </tr>\r\n        <tr>\r\n            <td>MUR Account No.:</td>\r\n            <td>000441409288</td>\r\n        </tr>\r\n        <tr>\r\n            <td>IBAN:</td>\r\n            <td>MU94MCBL09440004419288000MUR</td>\r\n        </tr>\r\n        <tr>\r\n            <td>Swift Code:</td>\r\n            <td>MCBLMUMU</td>\r\n        </tr>\r\n        {%endif%}\r\n    \r\n</table>\r\n \r\n                        <table class=\"col-md-1\" style=\"width: 70px;\">\r\n                            <tr>\r\n <td style=\"padding: 5px !important;\r\n    padding-top: 85px !important;\">Currency<br>{{doc.currency}}</td>\r\n                            \r\n                            </tr>\r\n                          \r\n                        </table>\r\n                     \r\n                        <div class=\"col-md-6\" style=\"    width: 100%;\">\r\n                            <table>\r\n                                <tr>\r\n                                    <th><b>Total</b></th>\r\n                                    <td>{{doc.currency}} {{doc.total}}</td>\r\n                                </tr>\r\n                                <tr>\r\n                                    <th><b>Payments/Deposits</b></th>\r\n                                    <td>{{doc.currency}} {{doc.total_advance}}</td>\r\n                                </tr>\r\n                                <tr>\r\n                                    <th><b>Balance Due</b></th>\r\n                                    <td>{{doc.currency}} {{doc.outstanding_amount}}</td>\r\n                                </tr>\r\n                            </table>\r\n                        </div>\r\n                        </div>\r\n                    </div>   <table style=\"margin-top: -9rem;margin-left: -25px;\">\r\n                            <tr>\r\n                                <td style=\"border: none;text-align: end;\">\r\n                                    Authorised By :- OLIVIER BERC\r\n                                </td>\r\n                            </tr>\r\n                        </table>\r\n        </div>\r\n        {% macro footer() %}\r\n\r\n  <p style=\"color:blue;font-size:10px; text-align:center; left:0; right:0; position:fixed; width: 100%; bottom: 10px;\">4th Floor, Maeva Tower Building, Eb\u00e8ne Business Park,\tR\u00e9duit - 72201, Mauritius   Tel: +230 463 2084   Email: info@envaste.com   www.envaste.com</p>\r\n{% endmacro %}\r\n{{footer()}}\r\n</body>\r\n</html>",
